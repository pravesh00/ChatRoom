<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Output_Chatroom">
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="top">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon2"
            android:id="@+id/logo"
            android:layout_marginLeft="20sp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChatRoom Name"
            android:layout_toRightOf="@+id/logo"
            android:id="@+id/ChannelName"
            android:layout_marginLeft="10sp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="22sp"></TextView>
      <Button
          android:layout_width="30sp"
          android:id="@+id/btnCancel"
          android:layout_height="30sp"
          android:layout_centerVertical="true"
          android:layout_marginRight="10sp"
          android:layout_alignParentRight="true"
          android:background="@drawable/cancel"></Button>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10sp"
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="569dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.339"

        tools:listitem="@layout/received_message" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerMessages"
        >

    <EditText
        android:id="@+id/txtMessageText"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_marginBottom="5sp"
        android:ems="10"
        android:hint="Type a message here..."
        android:inputType="textPersonName"
        android:background="@drawable/textfield_bg"
        android:layout_marginLeft="10sp"
        android:gravity="center"
        android:fontFamily="@font/roboto"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"

       android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/btnSend"
        android:layout_width="60dp"
        android:layout_height="47dp"
        android:text="Send"
        android:src="@drawable/icon"
        android:layout_marginRight="-1sp"
        android:layout_alignRight="@+id/txtMessageText"
        android:background="@android:color/white"
        android:layout_alignParentRight="true"
        />


    <ProgressBar
        android:id="@+id/pgrSend"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentRight="true" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>